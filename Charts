
import matplotlib.pyplot as plt
import dfnumerototdonne, dfnumerototuomini


#BARCHART NUMERO 
listadonne = dfnumerototdonne.at[0, 'tot']
listauomini = dfnumerototuomini.at[0, 'tot']

# Define the number of male and female deputies
num_male_deputies = listauomini
num_female_deputies = listadonne
 

# Create a list of the data to plot
data = [num_male_deputies, num_female_deputies]
# Create a list of the labels for the data
labels = ['Male Deputies', 'Female Deputies']

# Define the colors for the data
colors = ['blue', 'pink']

# Create a stacked bar chart
plt.bar(labels, data, color=colors)

# Set the chart title and axis labels
plt.title('Number of Deputies in Italian Chamber of Deputies')
plt.xlabel('Gender')
plt.ylabel('Number of Deputies')

# Show the chart
plt.show()

